@model app_movies.Data.ViewModels.NewMovieVM
@using app_movies.Data
@using app_movies.Data.Enums

@{
    ViewData["Title"] = "Registrar una película";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p><h4>Registrar una película</h4></p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label" asp-for="Name"></label>
                                <input type="text" class="form-control" asp-for="Name">
                                <span class="text-danger" asp-validation-for="Name"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label" asp-for="StartDate"></label>
                                <input type="date" class="form-control" asp-for="StartDate">
                                <span class="text-danger" asp-validation-for="StartDate"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label" asp-for="EndDate"></label>
                                <input type="date" class="form-control" asp-for="EndDate">
                                <span class="text-danger" asp-validation-for="EndDate"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label" asp-for="Price"></label>
                                <input type="number" class="form-control" asp-for="Price">
                                <span class="text-danger" asp-validation-for="Price"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label" asp-for="ImageURL"></label>
                                <input class="form-control" asp-for="ImageURL">
                                <span class="text-danger" asp-validation-for="ImageURL"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label" asp-for="CinemaId"></label>
                                <select class="form-control" asp-for="CinemaId" asp-items="ViewBag.Cinemas"></select>
                                <span class="text-danger" asp-validation-for="CinemaId"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label" asp-for="MovieCategory"></label>
                                <select class="form-control" asp-for="MovieCategory" asp-items="Html.GetEnumSelectList<MovieCategory>()"></select>
                                <span class="text-danger" asp-validation-for="MovieCategory"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label" asp-for="ProducerId"></label>
                                <select class="form-control" asp-for="ProducerId" asp-items="ViewBag.Producers"></select>
                                <span class="text-danger" asp-validation-for="ProducerId"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label" asp-for="ActorIds"></label>
                                <select class="form-control" asp-for="ActorIds" asp-items="ViewBag.Actors"></select>
                                <span class="text-danger" asp-validation-for="ActorIds"></span>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="control-label" asp-for="Description"></label>
                                <textarea class="form-control" asp-for="Description"></textarea>
                                <span class="text-danger" asp-validation-for="Description"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 offset-4 text-center">
                        <img id="ImageUrlPreview" width="100%">
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-outline-success float-end" value="Registrar">
                        <a class="btn btn-outline-secondary" asp-action="Index">Mostrar todos</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ImageUrlPreview');

            output.src = $('#ImageURL').val();
        });

        $('#ImageURL').on('change', function () {
            var output = document.getElementById('ImageUrlPreview');

            output.src = $(this).val();
        });
    </script>
}