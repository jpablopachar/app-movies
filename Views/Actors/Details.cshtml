@model Actor

@{
    ViewData["Title"] = "Detalles del actor";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Detalles de @Model.FullName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group text-center">
                    <img id="ProfilePicturePreview" style="max-width: 150px;" class="border-info rounded-circle">
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="ProfilePictureURL"></label>
                    <input type="text" class="form-control" asp-for="ProfilePictureURL">
                    <span class="text-danger" asp-validation-for="ProfilePictureURL"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="FullName"></label>
                    <input type="text" class="form-control" asp-for="FullName">
                    <span class="text-danger" asp-validation-for="FullName"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="Bio"></label>
                    <input type="text" class="form-control" asp-for="Bio">
                    <span class="text-danger" asp-validation-for="Bio"></span>
                </div>
                <div class="form-group">
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <a class="btn btn-outline-success float-end" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
                    }
                    <a class="btn btn-outline-secondary" asp-action="Index">Mostrar todos</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Script
{
    <script>
        $(document).ready(function() {
            var output = document.getElementById('ProfilePicturePreview');

            output.src = $('#ProfilePictureURL').val();
        });
    </script>
}